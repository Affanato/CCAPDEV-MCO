<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Krona+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="reservation.css">
    <title>Lambda Lab Reservation</title>
</head>

<body>

<main>
    <section id="reservation-container">
        <form id="reservation-form" action="" method="POST">
            <!-- Venue Selection Panel -->
            <div id="venue-panel" class="reservation-panel">
                <span>Venue</span>
                <hr>
                <div id="venue-selector-container">
                    <div id="venue-labels">
                        <label for="building">Building</label>
                        <label for="room">Room</label>
                    </div>
                    <div id="venue-inputs">
                        <select name="building" id="building" class="select" required>
                            <option value="goks">Gokongwei</option>
                            <option value="andrew">Andrew</option>
                            <option value="st_la_salle">St. La Salle</option>
                        </select>
                        <select name="room" id="room" class="select" required>
                            <option value="GK104">GK104</option>
                            <option value="GK103">GK103</option>
                            <option value="AG1905">AG1905</option>
                            <option value="AG1906">AG1906</option>
                            <option value="LS319">LS319</option>
                            <option value="LS226">LS226</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Date Selection Panel -->
            <div id="date-panel" class="reservation-panel">
                <span>Date</span>
                <hr>
                <div id="calendar-container">
                    <div id="month">
                        <img src="../public/Assets/leftarrow.png" alt="Previous Month" class="arrow-icon">
                        <span>February</span>
                        <img src="../public/Assets/rightarrow.png" alt="Next Month" class="arrow-icon">
                    </div>
                    <div id="week">
                        <div class="day">Su</div>
                        <div class="day">Mo</div>
                        <div class="day">Tu</div>
                        <div class="day">We</div>
                        <div class="day">Th</div>
                        <div class="day">Fr</div>
                        <div class="day">Sa</div>
                    </div>
                    <div id="days">
                        <!-- Example for Dates -->
                        <button class="date">28</button>
                        <button class="date">29</button>
                        <button class="date">1</button>
                        <button class="date">2</button>
                        <button class="date">3</button>
                        <!-- Add more buttons as needed -->
                    </div>
                </div>
            </div>

            <!-- Time Selection Panel -->
            <div id="time-panel" class="reservation-panel">
                <span>Time</span>
                <hr>
                <select name="time" id="time" class="select" required>
                    <option value="7:30">7:30 AM</option>
                    <option value="8:00">8:00 AM</option>
                    <option value="8:30">8:30 AM</option>
                    <option value="9:00">9:00 AM</option>
                    <!-- Add more options as needed -->
                </select>
            </div>

            <button type="submit">Check Availability</button>
        </form>
    </section>

    <!-- Reservation Details Section -->
    <section id="reservation-display">
        <section id="information-display">
            <div id="venue-display">
                <span>GK101A</span>
            </div>
            <div id="date-display">
                <span>February 6, 2025</span>
            </div>
            <div id="time-display">
                <span>6:00 PM</span>
            </div>
        </section>

        <!-- Seat Layout Section -->
        <section id="seat-container">
            <div id="whiteboard">Board</div>
            <section id="seat-layout">
                <form id="seat-form" action="" method="POST">
                    <div class="column">
                        <input type="button" value="Seat 1">
                        <input type="button" value="Seat 2">
                        <input type="button" value="Seat 3">
                        <!-- More seats here -->
                    </div>
                    <div class="column">
                        <input type="button" value="Seat 4">
                        <input type="button" value="Seat 5">
                        <input type="button" value="Seat 6" class="reserved">
                        <!-- More seats here -->
                    </div>
                    <div class="column">
                        <input type="button" value="Seat 7">
                        <input type="button" value="Seat 8" class="selected">
                        <!-- More seats here -->
                    </div>
                </form>
            </section>
        </section>

        <!-- Legend for Seat Availability -->
        <section id="legend">
            <div><input type="button" id="available">Available</div>
            <div><input type="button" id="unavailable">Unavailable</div>
            <div><input type="button" id="selected">Selected</div>
        </section>
    </section>
</main>
</body>

</html>