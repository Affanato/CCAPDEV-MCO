<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Krona+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/profile_styles.css">
    <title>Lambda Lab Profile</title>
</head>

<body>
<header>
    <h1>&#411; Lambda Lab Hub</h1>
    <nav>
        <input type="text" placeholder="Search..">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/login">Log In</a>
    </nav>
</header>

<main>
    <!-- Profile Section -->
    <section id="profile-section">
        <div id="profile-card">
            <div id="profile-image"></div>
            <div id="profile-info">
                <h2>{{user.name}}</h2>
                <p>{{user.bio}}</p>
            </div>
        </div>
        <a href="/profile/edit"><button id="edit-button">Edit Profile</button></a>
    </section>

    <!-- Reservation Details Section -->
    <section id="reservation-details">
        <div class="reservation-header">
            <span>Seat Number</span>
            <span>Venue</span>
            <span>Date of Request</span>
            <span>Date of Reservation</span>
        </div>

        {{#each reservations}}
            <div class="reservation-row">
                <span>{{seat}}</span>
                <span>{{venue}}</span>
                <span>{{requestDate}}</span>
                <span>{{reservationDate}}</span>
            </div>
        {{/each}}
    </section>
</main>
</body>

</html>
